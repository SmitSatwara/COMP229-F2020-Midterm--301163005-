<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->

<div class="set-div-style">
    <form id="book-form" role="form" action="" method="post" class="set-form-style">

        <table class="table set-style-table">
            <tr>
                <td><b>Title</b></td>
                <td><input type="text" class="form-control" placeholder="Title" id="name" name="name" value="<%= `${book.name}` %>"></td>
            </tr>
            <tr>
                <td><b>Author</b></td>
                <td><input type="text" class="form-control" placeholder="Author" id="author" name="author" value="<%= `${book.author}` %>"></td>
            </tr>
            <tr>
                <td><b>Description</b></td>
                <td><input type="text" class="form-control" placeholder="Description" id="description" name="description" value="<%= `${book.description}` %>"></td>
            </tr>
            <tr>
                <td><b>Published</b></td>
                <td><input type="number" class="form-control" placeholder="Year" id="published" name="published" value="<%= `${book.published}` %>"></td>
            </tr>
            <tr>
                <td><b>Price</b></td>
                <td><input type="number" class="form-control" placeholder="Price" id="price" name="price" value="<%= `${book.price}` %>"></td>
            </tr>
        </table>

        <div class="set-btn-div">
            <button class="btn btn-success set-btn-style">Edit Book</button>
        </div>

    </form>
</div>

